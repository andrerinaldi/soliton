<h3>Search results</h3>

{{#if model}}
  <ul class="search-results">
    {{#each model as |repo|}}
      <li class="item">
        <header class="item__header">
          <h3 class="item__header__title">
            author/repo-name
          </h3>

          <p class="item__header__description">
            Lorem ipsum
          </p>
        </header>

        <section class="item__content">
          <a href="{{repo.link}}" target="_blank">
            <p>
              {{repo.title}}
            </p>
          </a>
        </section>
      </li>
    {{/each}}
  </ul>
{{else}}
  empty list
{{/if}}
